<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_main_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffCEFBC9" >

    <ListView
        android:id="@+id/favorite_app_ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/favorite_button_LinearLayout"
        android:background="#aaffffff" />

    <LinearLayout
        android:id="@id/favorite_button_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:padding="2dp" >

        <Button
            android:id="@+id/favorite_user_Button"
            style="@style/KeyBoard_Button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#ffCEFBC9"
            android:text="@string/favorite_user" />

        <Button
            android:id="@+id/favorite_system_Button"
            style="@style/KeyBoard_Button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#ffCEFBC9"
            android:text="@string/favorite_system" />
    </LinearLayout>

</RelativeLayout>